{
  "name": "heathbot",
  "version": "1.0.0",
  "description": "a bot that posts on both twitter and mastodon.",
  "private": true,
  "author": "s <https://github.com/lostfictions>",
  "main": "dist/main.js",
  "scripts": {
    "start": "node --enable-source-maps dist/main.js",
    "dev": "ts-node -T src/main.ts -- local",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint --color 'src/**/*.ts' --max-warnings=0",
    "test:prettier": "prettier -l 'src/**/*'",
    "prettier": "prettier 'src/**' --write"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "canvas": "^2.11.0",
    "dotenv": "^16.0.3",
    "twoot": "0.3.0",
    "znv": "^0.3.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "eslint": "^8.31.0",
    "eslint-config-lostfictions": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
