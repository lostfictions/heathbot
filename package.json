{
  "name": "heathbot",
  "version": "1.0.0",
  "description": "a bot that posts on both twitter and mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "build": "rm -rf dist/ && tsc",
    "watch": "tsc -w",
    "dev": "ts-node-dev --respawn --transpile-only --notify=false src/main.ts -- local",
    "test": "tsc --noEmit && eslint ./src --ext .ts,.tsx && prettier 'src/**' -l",
    "prettier": "prettier 'src/**' --write"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "canvas": "^2.5.0",
    "envalid": "^5.0.0",
    "source-map-support": "^0.5.12",
    "twoot": "0.0.3"
  },
  "devDependencies": {
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^5.0.0",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">=12.1.0"
  }
}